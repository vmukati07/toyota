<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="products_export_xtento" showInDefault="1" showInWebsite="1" showInStore="1" sortOrder="40" translate="label">
            <label>Products Export</label>
            <tab>toyota</tab>
            <resource>Infosys_XtentoProductExport::products_export</resource>
            <group id="general" translate="label" sortOrder="40" showInDefault="1" showInWebsite="0" showInStore="0">
                <label>Export Configuration</label>
                <field id="active" translate="label" type="select" sortOrder="1" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Apply Products Export Changes</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
            </group>
            <group id="logging_errors" translate="label" sortOrder="40" showInDefault="1" showInWebsite="0" showInStore="0">
                <label>Logs</label>
                <field id="active" translate="label" type="select" sortOrder="1" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Enable/Disable Logs</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
            </group>
        </section>
    </system>
</config>
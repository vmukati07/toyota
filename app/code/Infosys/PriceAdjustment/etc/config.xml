    <default>
        <discount>
            <discount_configuration>
                <maximum_product_count>10000</maximum_product_count>
                <enable_logging>0</enable_logging>
                <enable_cronjob>1</enable_cronjob>
                <price_calc_cronjob>1</price_calc_cronjob>
                <tier_price_import>1</tier_price_import>
                <tier_price_import_rabbitmq>0</tier_price_import_rabbitmq>
                <update_price_per_batch>1000</update_price_per_batch>                      
            </discount_configuration>
        </discount>
    </default>

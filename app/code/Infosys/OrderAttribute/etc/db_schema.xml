<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="quote_item" resource="checkout" engine="innodb" comment="Sales Flat Quote Item">
        <column xsi:type="varchar" name="vin_number" nullable="true" length="255" comment="VIN Number"/>
        <column xsi:type="varchar" name="vehicle_name" nullable="true" length="255" comment="Vehicle Name"/>
        <column xsi:type="varchar" name="fitment_notice" nullable="true" length="255" comment="Fitment Notice"/>
        <column xsi:type="varchar" name="fitment_status" nullable="true" length="255" comment="Fitment Status"/>
    </table>
    <table name="sales_order_item" resource="sales" engine="innodb" comment="Sales Flat Order Item">
        <column xsi:type="varchar" name="vin_number" nullable="true" length="255" comment="VIN Number"/>
        <column xsi:type="varchar" name="vehicle_name" nullable="true" length="255" comment="Vehicle Name"/>
        <column xsi:type="varchar" name="fitment_notice" nullable="true" length="255" comment="Fitment Notice"/>
        <column xsi:type="varchar" name="fitment_status" nullable="true" length="255" comment="Fitment Status"/>
    </table>
</schema>